            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "CandidateSkillRequest": {
        "required": [
          "skillId"
        ],
        "type": "object",
        "properties": {
          "skillId": {
            "type": "integer",
            "format": "int32"
          },
          "yearsExperience": {
            "maximum": 50,
            "minimum": 0,
            "type": "integer",
            "format": "int32"
          },
          "proficiencyLevel": {
            "maxLength": 20,
            "minLength": 0,
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "CloseWithCandidateRequest": {
        "required": [
          "candidateId",
          "reason",
          "selectionDate"
        ],
        "type": "object",
        "properties": {
          "candidateId": {
            "type": "integer",
            "format": "int32"
          },
          "selectionDate": {
            "type": "string",
            "format": "date-time"
          },
          "reason": {
            "maxLength": 500,
            "minLength": 0,
            "type": "string"
          },
          "notes": {
            "maxLength": 1000,
            "minLength": 0,
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "CreateCandidateRequest": {
        "required": [
          "email",
          "fullName"
        ],
        "type": "object",
        "properties": {
          "fullName": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "phone": {
            "type": "string",
            "format": "tel",
            "nullable": true
          },
          "cvPath": {
            "type": "string",
            "nullable": true
          },
          "profileStatus": {
            "maxLength": 20,
            "minLength": 0,
            "type": "string",
            "nullable": true
          },
          "skills": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CandidateSkillRequest"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "CreateJobRequest": {
        "required": [
          "department",
          "description",
          "employmentType",
          "level",
          "location",
          "minExperience",
          "numberOfPositions",
          "title"
        ],
        "type": "object",
        "properties": {
          "title": {
            "maxLength": 200,
            "minLength": 5,
            "type": "string"
          },
          "description": {
            "maxLength": 2000,
            "minLength": 10,
            "type": "string"
          },
          "location": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "department": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "minExperience": {
            "maximum": 50,
            "minimum": 0,
            "type": "integer",
            "format": "int32"
          },
          "level": {
            "minLength": 1,
            "pattern": "^(Junior|Mid-Level|Senior|Lead|Principal)$",
            "type": "string"
          },
          "salaryRange": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string",
            "nullable": true
          },
          "employmentType": {
            "minLength": 1,
            "pattern": "^(Full-time|Part-time|Contract)$",
            "type": "string"
          },
          "numberOfPositions": {
            "maximum": 100,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "applicationDeadline": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "skills": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CreateJobSkillItem"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "CreateJobSkillItem": {
        "required": [
          "isMandatory",
          "skillId"
        ],
        "type": "object",
        "properties": {
          "skillId": {
            "type": "integer",
            "format": "int32"
          },
          "isMandatory": {
            "type": "boolean"
          },
          "priority": {
            "maximum": 3,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "notes": {
            "maxLength": 500,
            "minLength": 0,
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "LoginRequest": {
        "required": [
          "email",
          "password"
        ],
        "type": "object",
        "properties": {
          "email": {
            "minLength": 1,
            "type": "string"
          },
          "password": {
            "minLength": 4,
            "type": "string"
          },
          "rememberMe": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "OnHoldOrOnCloseRequest": {
        "required": [
          "reason"
        ],
        "type": "object",
        "properties": {
          "reason": {
            "maxLength": 500,
            "minLength": 0,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "UpdateJobRequest": {
        "type": "object",
        "properties": {
          "title": {
            "maxLength": 200,
            "minLength": 5,
            "type": "string",
            "nullable": true
          },
          "description": {
            "maxLength": 2000,
            "minLength": 50,
            "type": "string",
            "nullable": true
          },
          "location": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string",
            "nullable": true
          },
          "department": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string",
            "nullable": true
          },
          "minExperience": {
            "maximum": 50,
            "minimum": 0,
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "level": {
            "pattern": "^(Junior|Mid-Level|Senior|Lead|Principal)$",
            "type": "string",
            "nullable": true
          },
          "salaryRange": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string",
            "nullable": true
          },
          "employmentType": {
            "pattern": "^(Full-time|Part-time|Contract)$",
            "type": "string",
            "nullable": true
          },
          "numberOfPositions": {
            "maximum": 100,
            "minimum": 1,
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "applicationDeadline": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "description": "Enter your JWT token (without Bearer prefix)",
        "scheme": "Bearer",
        "bearerFormat": "JWT"
      }
    }
