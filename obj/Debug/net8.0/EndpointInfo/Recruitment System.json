          "password"
        ],
        "type": "object",
        "properties": {
          "fullName": {
            "maxLength": 100,
            "minLength": 2,
            "type": "string"
          },
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "password": {
            "minLength": 6,
            "type": "string"
          },
          "confirmPassword": {
            "minLength": 1,
            "type": "string"
          },
          "phone": {
            "type": "string",
            "format": "tel",
            "nullable": true
          },
          "cvPath": {
            "type": "string",
            "nullable": true
          },
          "skills": {
            "type": "array",
            "items": {
